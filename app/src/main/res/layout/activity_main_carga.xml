                <Spinner
                    android:id="@+id/spinnerDelegaciones2"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

        <Button
